%p#notice= notice
= link_to 'Edit', edit_fee_path(@fee)
\|
= link_to 'Back', fees_path

%p
  %b Package:
  = @fee.package
%p
  %b Amount:
  = @fee.amount
%p
  %b Stream:
  = @fee.stream.full_name
%p
  %b Year:
  = @fee.year.year
%p
  %b Subject:
  = @fee.subject.name

%b Students:
%table.table.table-striped
  %thead
    %tr
      %th Adm no
      %th Full Name
      %th Paid
      %th Balances

  %tbody
    - @fee.stream.students.each do |student|
      %tr
        %td= link_to student.adm_no, student
        %td= "#{student.first_name} #{student.last_name}"
        %td 10,000
        %td 7,000

