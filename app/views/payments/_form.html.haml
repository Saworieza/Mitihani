= form_for @payment do |f|
  - if @payment.errors.any?
    #error_explanation
      %h2= "#{pluralize(@payment.errors.count, "error")} prohibited this payment from being saved:"
      %ul
        - @payment.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :amount
    = f.text_field :amount
  .field
    = f.label :date
    = f.date_select :date
  .field
    = f.label :method
    = f.text_field :method
  .field
    = f.label :student
    = f.text_field :student
  .field
    = f.label :fee
    = f.text_field :fee
  .actions
    = f.submit 'Save'
