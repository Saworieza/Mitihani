= form_for @stream do |f|
  - if @stream.errors.any?
    #error_explanation
      %h2= "#{pluralize(@stream.errors.count, "error")} prohibited this stream from being saved:"
      %ul
        - @stream.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :classroom
    = f.collection_select :classroom_id, Classroom.order(:name), :id, :name, include_blank: true
    / = f.text_field :classroom
  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
