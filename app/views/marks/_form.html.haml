= form_for @mark do |f|
  - if @mark.errors.any?
    #error_explanation
      %h2= "#{pluralize(@mark.errors.count, "error")} prohibited this mark from being saved:"
      %ul
        - @mark.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :mark
    = f.number_field :mark
  .field
    = f.label :stream
    = f.collection_select :stream_id, Stream.all, :id, :name  , include_blank: true
    / = f.text_field :stream
  .actions
    = f.submit 'Save'
