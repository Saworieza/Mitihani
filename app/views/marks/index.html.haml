%h1 Listing marks

%table
  %thead
    %tr
      %th Mark
      %th Student
      %th Result
      %th
      %th
      %th

  %tbody
    - @marks.each do |mark|
      %tr
        %td= mark.mark
        %td= mark.student.stud_name
        %td= mark.result.exam.exam_name
        %td= link_to 'Show', mark
        %td= link_to 'Edit', edit_mark_path(mark)
        %td= link_to 'Destroy', mark, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Mark', new_mark_path
