= form_for @student do |f|
  - if @student.errors.any?
    #error_explanation
      %h2= "#{pluralize(@student.errors.count, "error")} prohibited this student from being saved:"
      %ul
        - @student.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :classroom
    = f.collection_select :classroom_id, Classroom.all, :id, :class_name, include_blank: true
    / = f.text_field :classroom
  .field
    = f.label :stream
    = f.grouped_collection_select :stream_id, Classroom.all, :streams, :class_name, :id, :name, include_blank: true
    / = f.text_field :stream
  .field
    = f.label :adm_no
    = f.number_field :adm_no
  .field
    = f.label :first_name
    = f.text_field :first_name
  .field
    = f.label :last_name
    = f.text_field :last_name
  .actions
    = f.submit 'Save'
